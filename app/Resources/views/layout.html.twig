{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}La billeterie du musée du Louvre{% endblock %}</title>
    <link rel="shortcut icon" href="{{ asset('bundles/louvreticket/image/louvre_favicon.png') }}"
    ">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/louvreticket/css/magister.css') }}">

        <!-- Bootstrap itself -->
        <link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet"
              type="text/css">

        <!-- Custom styles -->
        <link rel="stylesheet" href="{{ asset('bundles/louvreticket/css/magister.css') }}">

        <!-- Fonts -->
        <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet"
              type="text/css">
        <link href='http://fonts.googleapis.com/css?family=Wire+One' rel='stylesheet' type='text/css'>
    {% endblock %}

</head>

<body class="theme-invert">

<nav class="mainmenu">
    <div class="container">
        <div class="dropdown">
            <button type="button" class="navbar-toggle" data-toggle="dropdown"><span class="icon-bar"></span> <span
                        class="icon-bar"></span> <span class="icon-bar"></span></button>
            <!-- <a data-toggle="dropdown" href="#">Dropdown trigger</a> -->
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <li><a href="{{ path('louvre_ticket_homepage') }}">Accueil</a></li>
                <li><a href="{{ path('louvre_ticket_order') }}">Réserver</a></li>
                <li><a href="{{ path('louvre_ticket_infos') }}">Informations pratiques</a></li>
            </ul>
        </div>
    </div>
</nav>


<div class="container">
    <div class="row">
        <div class="col-md-10  col-md-offset-1  text-center">

            <!-- Site Title, your name, HELLO msg, etc. -->
            <h1 class="title">Billeterie du Musée du Louvre</h1>
            {% block body %}

            {% endblock %}

        </div>
    </div>


    <footer class="col-lg-12 col-md-12 ">
        <p>Projet de Billetterie OC - BreizhWebcom</p>
        <p>   <a href="{{ path('louvre_ticket_mentions') }}">Mentions légales</a> &copy;2016 </p>
    </footer>
</body>
{% block javascripts %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="assets/js/modernizr.custom.72241.js"></script>
    <!-- Custom template scripts -->
    <script src="{{ asset('bundles/louvreticket/js/magister.js') }}"></script>
{% endblock %}
</html>
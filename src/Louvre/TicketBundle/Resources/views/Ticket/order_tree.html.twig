{% endblock %}

{% block body %}

   <h2>Paiement</h2>


   <form class="stripe-button-container text-center" method="POST">

       <form  method="POST">
           <script
                   src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                   data-key="pk_test_LYib6NbE4DpiDsxFOrkbtQN0"
                   data-amount="2000"
                   data-name="Demo Site"
